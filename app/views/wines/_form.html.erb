<% form_for @wine do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :batch_number, "#" %> <%= f.text_field :batch_number, :size => 3 %>
    <%= f.label :name %>: <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :started %><br />
    <%= f.datetime_select :started %>
  </p>
  <p>
    <% f.fields_for :ingredients do |builder| %>
      <%= render "ingredient_fields", :f => builder %>
    <% end %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
